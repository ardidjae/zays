<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}SCI ZAYS{% endblock %}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    {% block stylesheets %}{% endblock %}
    <style>
        .form-row {
            margin-bottom: 15px;
        }

        .form-group {
            text-align: center;
        }

        .form-control {
            width: 70%;
            margin: 0 auto;
        }

        .btn {
            display: block;
            margin: 0 auto;
        }

        .tables {
            margin-top: 50px; /* Adjust margin-top as needed */
        }
    </style>
</head>
<body>
    {% include 'header.html.twig' %}
    {% block body %}
    <section class="tables">
        <div class="d-flex justify-content-center align-items-center"></br>
            <h5 class="text-center"><i class="ri-bank-line"></i>&nbsp; Derniers mouvements importés</h5>
        </div></br>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header border-bottom">
                            <i class="ri-file-list-line"></i>&nbsp; Liste
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table text-sm mb-0 table-bordered">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th width="8%" class="text-center">Date</th>
                                            <th scope="col" class="text-center">Libellé</th>
                                            <th scope="col" class="text-center">Débit</th>
                                            <th scope="col" class="text-center">Crédit</th>
                                            <th scope="col" class="text-center">Sous-catégorie</th>
                                            <th scope="col" class="text-center">Enregistrer</th>
                                            <th scope="col" class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{ form_start(form) }}
                                        {% for mouvementForm in form.mouvements %}
                                            <tr>
                                                <td>{{ form_row(mouvementForm.dateM) }}</td>
                                                <td>{{ form_row(mouvementForm.libelle) }}</td>
                                                <td>{{ form_row(mouvementForm.debit) }}</td>
                                                <td>{{ form_row(mouvementForm.credit) }}</td>
                                                <td>{{ form_row(mouvementForm.souscategorie) }}</td>
                                                <td>{{ form_row(mouvementForm.enregistrer, {'attr': {'class': 'btn btn-primary'}}) }}</td>
                                                <td>
                                                    <button type="button" class="btn btn-secondary">
                                                        <a href="#" style="color: white; text-decoration: none;">
                                                            <i class="ri-page-separator"></i>Dissocier 
                                                        </a>
                                                    </button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <!-- Ajoutez des lignes supplémentaires au besoin -->
                                            </tr>
                                        {% endfor %}
                                        {{ form_end(form) }}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {% endblock %}

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-GLhlTQ8iK9tJ8B7ZY5pv4zIymI8vVfSTB9aGLv3R/6vH7poMlMJC5u2OlfU5Q+ES" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js" integrity="sha384-rsHyBmliQhikU+Bo2iIJUGT8ObF3nJwduFz9vGZ+4M5ekFxdz1i7FSfH5w5DO5Fa" crossorigin="anonymous"></script>
</body>
</html>
